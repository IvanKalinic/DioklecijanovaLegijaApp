@model DioklecijanovaLegija.ViewModels.EventFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Events"))
{
    @Html.ValidationSummary(@*true, "Please fix the following errors."*@)

    <div class="form-group">
        @Html.LabelFor(m => m.Event.Id)
        @Html.TextBoxFor(m => m.Event.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Event.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Name)
        @Html.TextBoxFor(m => m.Event.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Event.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.NumberOfMembers)
        @Html.TextBoxFor(m => m.Event.NumberOfMembers, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Event.NumberOfMembers)
    </div>
    <div class="form-group">
        @*<label for="BirthDate">Date of Birth</label>    u ovom slučaju donja linija nije potrebna, ali moramo vodit računa o imenu propertya svaki put kod ovog id-a*@
        @Html.LabelFor(m => m.Event.DateOfEvent)
        @Html.TextBoxFor(m => m.Event.DateOfEvent, "{0:d MMM yyyy}", new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Event.DateOfEvent)*@
    </div>

    @*@Html.HiddenFor(m => m.Event.Id)*@
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-default">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
